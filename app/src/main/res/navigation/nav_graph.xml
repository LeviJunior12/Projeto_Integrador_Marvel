<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projetointegradormarvel.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.projetointegradormarvel.favorites.FavoritesFragment"
        android:label="@string/menu_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_character"
        android:name="com.example.projetointegradormarvel.characters.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_character" />

    <fragment
        android:id="@+id/nav_comics"
        android:name="com.example.projetointegradormarvel.comics.ComicsFragment"
        android:label="fragment_comics"
        tools:layout="@layout/fragment_comics" />

    <fragment
        android:id="@+id/nav_creators"
        android:name="com.example.projetointegradormarvel.creators.CreatorsFragment"
        android:label="fragment_creators"
        tools:layout="@layout/fragment_creators" />

    <fragment
        android:id="@+id/nav_list"
        android:name="com.example.projetointegradormarvel.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" />

    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.projetointegradormarvel.z_LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/z_activity_login" />

    <action
        android:id="@+id/action_global_nav_character"
        app:destination="@id/nav_character" />

    <action
        android:id="@+id/action_global_nav_comics"
        app:destination="@id/nav_comics" />

    <action
        android:id="@+id/action_global_nav_creators"
        app:destination="@id/nav_creators" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.projetointegradormarvel.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.projetointegradormarvel.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.projetointegradormarvel.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="character"
            app:argType="com.example.projetointegradormarvel.characters.CharactersResults"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="comic"
            app:argType="com.example.projetointegradormarvel.comics.ComicsResults"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="creator"
            app:argType="com.example.projetointegradormarvel.creators.CreatorsResults"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>